  "license": "MIT",
  "dependencies": {
    "@apollo/client": "3.7.9",
    "@headlessui/react": "1.7.12",
    "@heroicons/react": "2.0.16",
    "@hookform/resolvers": "2.9.11",
    "@stripe/react-stripe-js": "^1.16.5",
    "@stripe/stripe-js": "^1.47.0",
    "deepmerge": "4.3.0",
    "firebase": "9.17.1",
    "firebase-admin": "11.5.0",
    "graphql": "16.6.0",
    "lodash.isequal": "4.5.0",
    "next": "13.2.3",
    "next-translate": "^2.0.2",
    "nookies": "2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.43.3",
    "react-table": "7.8.0",
    "ts-node": "^10.9.1",
    "yup": "1.0.2"
  },
  "scripts": {
    "start": "next start",
    "build": "next build",
    "build:size": "ANALYZE=true yarn build",
    "build:tailwind": "tailwind build styles/index.css -o styles/tailwind.css",
    "dev": "USE_TLS=false next dev",
    "dev:tls": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn dev",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm run build:tailwind && npm run dev",
    "format": "prettier --loglevel=warn --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "codegen": "graphql-codegen --config codegen.yml && yarn format && yarn lint",
    "test:lint": "yarn lint && yarn tsc",
    "test:unit": "vitest --run --coverage",
    "test": "yarn test:lint && yarn test:unit",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^3.0.1",
    "@graphql-codegen/typescript-graphql-files-modules": "^2.2.1",
    "@graphql-codegen/typescript-operations": "^3.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@graphql-tools/mock": "^8.7.18",
    "@graphql-tools/schema": "^9.0.16",
    "@next/bundle-analyzer": "^13.2.3",
    "@ngneat/falso": "^6.4.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^18.14.2",
    "@types/react-table": "^7.7.14",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.2",
    "autoprefixer": "^10.4.13",
    "c8": "^7.13.0",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-testing-library": "^5.10.2",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "next-compose-plugins": "^2.2.1",
    "next-router-mock": "^0.9.2",
    "next-translate-plugin": "^2.0.2",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2"
  }
}
