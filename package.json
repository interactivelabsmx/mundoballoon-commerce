{
  "name": "mundoballoon-commerce",
  "homepage": "https://mundoballoon.com",
  "version": "1.0.0",
  "description": "Mundo ballon commerce",
  "repository": "https://github.com/interactivelabsmx/mundoballoon-commerce",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "3.6.9",
    "@headlessui/react": "1.6.6",
    "@heroicons/react": "1.0.6",
    "@hookform/resolvers": "2.9.5",
    "@popperjs/core": "2.11.5",
    "apollo-upload-client": "17.0.0",
    "deepmerge": "4.2.2",
    "firebase": "9.9.0",
    "firebase-admin": "11.0.0",
    "graphql": "16.5.0",
    "lodash.isequal": "4.5.0",
    "next": "12.2.2",
    "nookies": "2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "14.2.2",
    "react-hook-form": "7.33.1",
    "react-table": "7.8.0",
    "yup": "0.32.11"
  },
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "next dev",
    "dev:tls": "NODE_TLS_REJECT_UNAUTHORIZED=0 USE_TLS=true yarn dev",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm run build:tailwind && npm run dev",
    "build:tailwind": "tailwind build styles/index.css -o styles/tailwind.css",
    "format": "prettier --loglevel=warn --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "codegen": "graphql-codegen --config codegen.yml && prettier --write ./graphql/ ",
    "test:lint": "yarn lint && yarn tsc",
    "test:unit": "yarn vitest --run --coverage",
    "test": "yarn test:lint && yarn test:unit",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.8.0",
    "@graphql-codegen/introspection": "^2.2.0",
    "@graphql-codegen/near-operation-file-preset": "^2.3.1",
    "@graphql-codegen/typescript": "^2.7.1",
    "@graphql-codegen/typescript-graphql-files-modules": "^2.2.0",
    "@graphql-codegen/typescript-operations": "^2.5.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.1",
    "@graphql-tools/mock": "^8.7.0",
    "@graphql-tools/schema": "^8.5.0",
    "@next/bundle-analyzer": "^12.2.2",
    "@ngneat/falso": "^6.0.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/apollo-upload-client": "^17.0.1",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^18.0.3",
    "@types/react-table": "^7.7.12",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "eslint": "^8.19.0",
    "eslint-config-next": "^12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-testing-library": "^5.5.1",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "next-router-mock": "^0.7.4",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "vitest": "^0.18.0"
  }
}
