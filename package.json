{
  "name": "mundoballoon-commerce",
  "homepage": "https://mundoballoon.com",
  "version": "1.0.0",
  "description": "Mundo ballon commerce",
  "repository": "https://github.com/interactivelabsmx/mundoballoon-commerce",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "3.7.3",
    "@headlessui/react": "1.7.7",
    "@heroicons/react": "2.0.13",
    "@hookform/resolvers": "2.9.10",
    "deepmerge": "4.2.2",
    "firebase": "9.15.0",
    "firebase-admin": "11.4.1",
    "graphql": "16.6.0",
    "lodash.isequal": "4.5.0",
    "next": "13.1.1",
    "next-translate": "^1.6.0",
    "nookies": "2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.41.3",
    "react-table": "7.8.0",
    "yup": "0.32.11"
  },
  "scripts": {
    "start": "next start",
    "build": "next build",
    "build:size": "ANALYZE=true yarn build",
    "build:tailwind": "tailwind build styles/index.css -o styles/tailwind.css",
    "dev": "USE_TLS=false next dev",
    "dev:tls": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn dev",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm run build:tailwind && npm run dev",
    "format": "prettier --loglevel=warn --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "codegen": "graphql-codegen --config codegen.yml && yarn format && yarn lint",
    "test:lint": "yarn lint && yarn tsc",
    "test:unit": "vitest --run --coverage",
    "test": "yarn test:lint && yarn test:unit",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.2",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/near-operation-file-preset": "^2.4.4",
    "@graphql-codegen/typescript": "^2.8.6",
    "@graphql-codegen/typescript-graphql-files-modules": "^2.2.1",
    "@graphql-codegen/typescript-operations": "^2.5.11",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@graphql-tools/mock": "^8.7.14",
    "@graphql-tools/schema": "^9.0.12",
    "@next/bundle-analyzer": "^13.1.1",
    "@ngneat/falso": "^6.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^18.11.18",
    "@types/react-table": "^7.7.14",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "^0.26.2",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "eslint": "^8.31.0",
    "eslint-config-next": "^13.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-router-mock": "^0.8.0",
    "postcss": "^8.4.20",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  }
}
